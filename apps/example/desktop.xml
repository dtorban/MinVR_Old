<?xml version="1.0"?>
<MVR>
<Server>
  <Port type="string">3490</Port>
  <Host>localhost</Host>
  <NumClients type="int">1</NumClients>
  <NumProcesses type="int">1</NumProcesses>
  <CreateServer type="int">1</CreateServer>
</Server>

<VRPlugins>
    <MinVRDefaultPlugins>
        <Names type="stringarray">MinVR_GLFW,MinVR_OpenGL,MinVR_Threading</Names>
    </MinVRDefaultPlugins>
</VRPlugins>

<VRCameras>
	<Head>
		<cameraPosition type="doublearray">15,0,0</cameraPosition>
		<cameraLookAtDirection type="doublearray">0,0,-1</cameraLookAtDirection>
		<cameraUpDirection type="doublearray">0,1,0</cameraUpDirection>
		<fieldOfView type="double">90.0</fieldOfView>
		<nearClip type="double">0.01</nearClip>
		<farClip type="double">100.0</farClip>
	</Head>
</VRCameras>

<VRDisplayDevices>
	<CameraNode>
		<displayType type="string">lookAtCamera</displayType>
		<camera type="string">/MVR/VRCameras/Head</camera>
		<SideBySideStereo>
			<interocularDistance type="double">0.2083</interocularDistance>
			<Desktop>
				<displayType type="string">window</displayType>
				<windowType type="string">GLFW</windowType>
				<xOffset type="double">0</xOffset>
				<yOffset type="double">0</yOffset>
				<width type="double">800</width>
				<height type="double">400</height>
			</Desktop>
		</SideBySideStereo>
	</CameraNode>
</VRDisplayDevices>

</MVR>
